{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "mapRoot": "./",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "../dist/out-tsc",
    "paths": {
      "@app/*": ["app/*"],
      "@actions/*": ["app/actions/*"],
      "@models/*": ["app/models/*"],
      "@services/*": ["app/services/*"],
      "@utilities/*": ["app/utilities/*"]
    },
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "../node_modules/@types"
    ]
  }
}
